package com.calculos;

public class Aritmetica {
	float result;
	String ex;
	
	
	protected String getResult() {
		return String.valueOf(result);
	}

		
	protected void setResult(float result) {
		if((Float)result == null){
			this.result = (Float) null;
		}else{
			this.result = result;		
		}
	}
	
	
	protected void calcula(String operacao, float valor1, float valor2 ){
	
		switch (operacao) {
		
		case "+":
			setResult((valor1+valor2));
			break;
		
		case "-":
			setResult((valor1-valor2));
			break;
		
		case "/":
			setResult((valor1/valor2));
			break;
			
		case "*":
			setResult((valor1*valor2));		
			break;
		
		default:
			setResult((Float) null);
			break;
		}		
	}		
}
