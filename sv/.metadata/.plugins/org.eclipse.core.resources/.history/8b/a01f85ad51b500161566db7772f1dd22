package com.calculos;

public class servicoCalculo {
	Aritmetica calculo = new Aritmetica();
	validador validacao = new validador();
	
	public String getResultado(String operacao, float valor1, float valor2)throws Exception{
		try{
			calculo.calcula(operacao, valor1, valor2);			
			return String.valueOf(calculo.getResult());
		}catch(Exception e){
			return validacao.validaCampo(operacao, "Operacção inválida!");
		}	
	}
}
